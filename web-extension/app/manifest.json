{
  "manifest_version": 3,
  "name": "SP Formatter",
  "short_name": "SP Formatter",
  "homepage_url": "https://github.com/pnp/sp-formatter",
  "description": "Customize your SharePoint Column, View or Form Layout Formatting JSON using a full-featured editor instead of the default one.",
  "version": "0.1.2",
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/*",
        "schema/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
