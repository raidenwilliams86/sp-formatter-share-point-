{
  "name": "sp-formatter",
  "displayName": "SP Formatter",
  "description": "SP Formatter connects to the corresponding Chrome extension and makes Column Formatting JSON development a lot more convenient",
  "version": "0.0.1",
  "license": "MIT",
  "keywords": [
		"SharePoint",
    "Microsoft 365",
    "Column formatting"
	],
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:sp-formatter.connect"
  ],
  "homepage": "https://github.com/pnp/sp-formatter",
  "repository": {
    "url": "https://github.com/pnp/sp-formatter.git",
    "type": "git"
  },
  "publisher": "s-kainet",
  "main": "./out/extension.js",
  "icon": "assets/icon128.png",
  "contributes": {
    "commands": [
      {
        "command": "sp-formatter.connect",
        "title": "SP Formatter: start a new session"
      },
      {
        "command": "sp-formatter.disconnect",
        "title": "SP Formatter: close current session"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sp-formatter.disconnect",
          "group": "sp-formatter@2",
          "when": "resourceLangId == json"
        },
        {
          "command": "sp-formatter.connect",
          "group": "sp-formatter@1",
          "when": "resourceLangId == json"
        }
      ],
      "commandPalette": [
        {
          "command": "sp-formatter.connect",
          "when": "resourceLangId == json"
        },
        {
          "command": "sp-formatter.disconnect",
          "when": "resourceLangId == json"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run lint && tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/stoppable": "^1.1.0",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vscode-test": "^1.4.1"
  },
  "dependencies": {
    "socket.io": "^3.0.4",
    "stoppable": "^1.1.0"
  }
}
